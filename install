function post_install {
    echo ""
    echo "Depending on your shell :"
    echo ""
    echo "Please manually add the following line(s) to ~/.bashrc :"
    echo "[[ -s /etc/profile.d/autojump.sh ]] && source /etc/profile.d/autojump.sh"
    echo ""
    echo "Please manually add the following line(s) to ~/.zshrc :"
    echo "[[ -s /etc/profile.d/autojump.sh ]] && source /etc/profile.d/autojump.sh"
    echo "autoload -U compinit && compinit -u"
    echo ""
    echo "Please manually add the following line(s) to ~/.config/fish/config.fish :"
    echo "if test -f /etc/profile.d/autojump.fish; . /etc/profile.d/autojump.fish; end"
    echo ""
    echo "Please restart terminal(s) before running autojump."
}
